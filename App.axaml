<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AutoPBI.App"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/AppDefaultStyles.axaml"></StyleInclude>
        <StyleInclude Source="Controls/IconButton.axaml"></StyleInclude>
        <StyleInclude Source="Controls/StatusIcon.axaml"></StyleInclude>
        <StyleInclude Source="Controls/UserImage.axaml"></StyleInclude>
        <StyleInclude Source="Controls/ToggleButtonGroup.axaml"></StyleInclude>
        <StyleInclude Source="Controls/TooltipContent.axaml"></StyleInclude>
        <StyleInclude Source="Controls/Toast.axaml"></StyleInclude>
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
    </Application.Styles>
             
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="Background">#FAFAFA</SolidColorBrush>
            <SolidColorBrush x:Key="White">#FAFAFA</SolidColorBrush>
            <SolidColorBrush x:Key="Neutral">#DFDFDF</SolidColorBrush>
            <SolidColorBrush x:Key="NeutralMuted">#EDEDED</SolidColorBrush>
            <SolidColorBrush x:Key="Foreground">#403F44</SolidColorBrush>
            <SolidColorBrush x:Key="ForegroundSemiTransparent">#1A403F44</SolidColorBrush>
            <SolidColorBrush x:Key="ForegroundMuted">#76757A</SolidColorBrush>
            <SolidColorBrush x:Key="Primary">#117865</SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryLight">#d5e5e2</SolidColorBrush>
            <SolidColorBrush x:Key="Secondary">#ecc92a</SolidColorBrush>
            
            <SolidColorBrush x:Key="SuccessLight">#f1f9f4</SolidColorBrush>
            <SolidColorBrush x:Key="Success">#51dc6b</SolidColorBrush>
            <SolidColorBrush x:Key="WarningLight">#fef7ea</SolidColorBrush>
            <SolidColorBrush x:Key="Warning">#febf21</SolidColorBrush>
            <SolidColorBrush x:Key="ErrorLight">#fcefea</SolidColorBrush>
            <SolidColorBrush x:Key="Error">#fc5859</SolidColorBrush>
        
            <FontFamily x:Key="InterRegular">/Assets/Fonts/Inter-Regular.otf#Inter</FontFamily>
            <FontFamily x:Key="InterMedium">/Assets/Fonts/Inter-Medium.otf#Inter Medium</FontFamily>
            <FontFamily x:Key="Icon">/Assets/Fonts/FontAwesome.ttf#Font Awesome 6 Pro Regular</FontFamily>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://LoadingIndicators.Avalonia/LoadingIndicators.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>