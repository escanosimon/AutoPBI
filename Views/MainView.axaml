<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="clr-namespace:AutoPBI.Controls"
        xmlns:vm="clr-namespace:AutoPBI.ViewModels"
        xmlns:popups="clr-namespace:AutoPBI.Views.Popups"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="300"
        Width="1000" Height="600"
        x:Name="MainWindow"
        x:Class="AutoPBI.MainView"
        x:DataType="vm:MainViewModel"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        CornerRadius="8"
        SystemDecorations="None"
        Title="AutoPBI">
    <Design.DataContext><vm:MainViewModel></vm:MainViewModel></Design.DataContext>
    
    <Border CornerRadius="8" Background="{DynamicResource Background}" ClipToBounds="True" BorderBrush="{DynamicResource ForegroundMuted}" BorderThickness="1">
        <Grid RowDefinitions="56, *">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="250" Width="2*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        
        <Grid Grid.ColumnSpan="2" Grid.RowSpan="2" ZIndex="1">
            <popups:DownloadPopupView DataContext="{Binding DownloadPopup}" />
            <popups:ScriptPopupView DataContext="{Binding ScriptPopup}" />
            <popups:ClonePopupView DataContext="{Binding ClonePopup}" />
            <popups:RefreshPopupView DataContext="{Binding RefreshPopup}" />
            <popups:PublishPopupView DataContext="{Binding PublishPopup}" />
            <popups:DeletePopupView DataContext="{Binding DeletePopup}" />
            <popups:LoginPopupView DataContext="{Binding LoginPopup}" />
        </Grid>
        
        <Border PointerPressed="DragWindow" Background="{DynamicResource Background}" Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" Padding="16 8" BorderThickness="0 0 0 1" BorderBrush="{DynamicResource NeutralMuted}" CornerRadius="8 8 0 0">
            <Grid ColumnDefinitions="*, *">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image VerticalAlignment="Center" Source="{SvgImage /Assets/Images/Power_BI_Logo.svg}" Height="24" Margin="0 0 8 0"/>
                        <TextBlock Foreground="{DynamicResource Foreground}" VerticalAlignment="Center" FontSize="20" FontFamily="{DynamicResource InterMedium}">AutoPBI</TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Right">
                    <c:IconButton Classes.Disabled="{Binding !IsLoggedIn}" Path="/Assets/Images/arrow-up-from-bracket.svg" Text="Publish" Classes="Primary" Command="{Binding OpenPopupCommand}" CommandParameter="{Binding PublishPopup}" />
                    <c:IconButton Text="Log in" Margin="8 0 0 0" Command="{Binding OpenPopupCommand}" CommandParameter="{Binding LoginPopup}" IsVisible="{Binding !IsLoggedIn}" />
                    <c:UserImage Color="{Binding User.Color}" Initials="{Binding User.Initials}" Margin="8 0 0 0" IsVisible="{Binding IsLoggedIn}" />
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="1" Grid.Column="0" Padding="16 16 4 16">
            <Border BorderThickness="1" BorderBrush="{DynamicResource NeutralMuted}" CornerRadius="12" Padding="16">
                <Grid RowDefinitions="Auto, Auto, *, 36">
                    <TextBlock Foreground="{DynamicResource Foreground}" FontFamily="{DynamicResource InterMedium}" FontSize="16" Margin="0 0 0 12">Workspaces</TextBlock>
                    <TextBox Grid.Row="1" Margin="0 0 0 12" Watermark="Search workspaces" />
                    <ScrollViewer Grid.Row="2" Margin="0 0 0 12">
                        <ItemsControl ItemsSource="{Binding Workspaces}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <c:WorkspaceItem Workspace="{Binding}" Command="{Binding ShowCommand}" IsChecked="{Binding IsShown}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <Button Classes.Disabled="{Binding !IsLoggedIn}" Command="{Binding ShowAllWorkspacesCommand}" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CornerRadius="8" Classes="Outline" Background="Transparent" BorderThickness="1" BorderBrush="{DynamicResource Primary}">
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource Primary}">Show all workspaces</TextBlock>
                            <c:StatusIcon Grid.Column="1" IsChecked="{Binding IsAllWorkspacesShown}" VerticalAlignment="Center" BorderBrush="{DynamicResource Primary}" Classes="Custom"/>
                        </Grid>
                    </Button>
                </Grid>
            </Border>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" Padding="4 16 16 16">
            <Border Padding="16">
                <Grid RowDefinitions="Auto, Auto, *">
                    <TextBlock Foreground="{DynamicResource Foreground}" FontFamily="{DynamicResource InterMedium}" FontSize="16" Margin="0 0 0 12">Reports</TextBlock>
                    <Grid Grid.Row="1" ColumnDefinitions="*, Auto" Margin="0 0 0 12">
                        <TextBox Watermark="Search reports" />
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <c:IconButton Classes.Disabled="{Binding !SelectedReports.Count}" Command="{Binding OpenPopupCommand}" CommandParameter="{Binding ScriptPopup}" Path="/Assets/Images/brackets-curly.svg" Text="Script" Classes="Outline" Margin="8 0 0  0"></c:IconButton>
                            <c:IconButton Classes.Disabled="{Binding !SelectedReports.Count}" Command="{Binding OpenPopupCommand}" CommandParameter="{Binding ClonePopup}" Path="/Assets/Images/copy.svg" Text="Clone" Classes="Outline"></c:IconButton>
                            <c:IconButton Classes.Disabled="{Binding !SelectedReports.Count}" Command="{Binding OpenPopupCommand}" CommandParameter="{Binding RefreshPopup}" Path="/Assets/Images/rotate-exclamation.svg" Text="Refresh" Classes="Outline"></c:IconButton>
                            <c:IconButton Classes.Disabled="{Binding !SelectedReports.Count}" Command="{Binding OpenPopupCommand}" CommandParameter="{Binding DownloadPopup}" Path="/Assets/Images/arrow-down-to-line.svg" Text="Save" Classes="IconOnly" Background="{DynamicResource NeutralMuted}" BorderBrush="{DynamicResource Neutral}" CornerRadius="8 0 0 8" Margin="8 0 0  0"></c:IconButton>
                            <c:IconButton Classes.Disabled="{Binding !SelectedReports.Count}" Command="{Binding OpenPopupCommand}" CommandParameter="{Binding DeletePopup}" Path="/Assets/Images/trash.svg" Text="Delete" Classes="IconOnly" Background="{DynamicResource Error}" BorderBrush="{DynamicResource ErrorDark}" CornerRadius="0 8 8 0"></c:IconButton>
                        </StackPanel>
                    </Grid>
                    <ScrollViewer Grid.Row="2" Margin="0 16 0 0">
                        <ItemsControl ItemsSource="{Binding ShownWorkspaces}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="0 0 0 24">
                                        <Button
                                            Padding="0" Margin="0 0 0 12"
                                            IsEnabled="{Binding Reports.Count}"
                                            Command="{Binding DataContext.SelectAllReportsCommand, ElementName=MainWindow, FallbackValue={x:Null}}" CommandParameter="{Binding}"
                                            >
                                            <Grid ColumnDefinitions="Auto, Auto, *, Auto" HorizontalAlignment="Left">
                                                <c:StatusIcon Status="Selectable" IsChecked="{Binding IsAllReportsSelected}" Margin="0 0 10 0" IsVisible="{Binding Reports.Count}"></c:StatusIcon>
                                                <Svg Grid.Column="1" Path="/Assets/Images/users.svg" Height="16" Margin="0 0 10 0" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" TextTrimming="CharacterEllipsis" FontFamily="{DynamicResource InterMedium}" FontSize="16" Foreground="{DynamicResource Primary}" VerticalAlignment="Center" Margin="0 0 10 0" Text="{Binding Name}"/>
                                                <Border Grid.Column="3" Padding="4 2" BorderBrush="{DynamicResource Primary}" BorderThickness="1" CornerRadius="4" VerticalAlignment="Center" IsVisible="{Binding Reports.Count}">
                                                    <TextBlock Foreground="{DynamicResource Primary}" FontSize="10" Text="{Binding Reports.Count}"/>
                                                </Border>
                                            </Grid>
                                        </Button>
                                        <ItemsControl ItemsSource="{Binding Reports}" IsVisible="{Binding IsDroppedDown}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <c:ReportItem Report="{Binding}" Command="{Binding DataContext.SelectReportCommand, ElementName=MainWindow, FallbackValue={x:Null}}" CommandParameter="{Binding}"></c:ReportItem>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Border>
    </Grid>
    </Border>
</Window>
