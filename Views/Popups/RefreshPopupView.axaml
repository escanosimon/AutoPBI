<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="clr-namespace:AutoPBI.Controls"
             xmlns:vm="clr-namespace:AutoPBI.ViewModels.Popups"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"
             x:Class="AutoPBI.Views.Popups.RefreshPopupView"
             x:DataType="vm:RefreshPopupViewModel">
    <Design.DataContext><vm:RefreshPopupViewModel></vm:RefreshPopupViewModel></Design.DataContext>
    <Grid>
        <Button Classes="PopupBackground"  Command="{Binding CloseCommand}" IsVisible="{Binding IsVisible}"/>
        
        <Border Background="{DynamicResource Background}" CornerRadius="12" BorderThickness="1" BorderBrush="{DynamicResource NeutralMuted}"
                IsVisible="{Binding IsVisible}"
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MaxHeight="400" MaxWidth="300">
            <Grid RowDefinitions="Auto, *, 56">
                <Border Padding="16 8" BorderBrush="{DynamicResource NeutralMuted}" BorderThickness="0 0 0 1">
                    <TextBlock Foreground="{DynamicResource Foreground}" FontSize="16" FontFamily="{DynamicResource InterMedium}">Refresh Reports</TextBlock>
                </Border>
                <Border Grid.Row="1" Padding="16" BorderBrush="{DynamicResource NeutralMuted}" BorderThickness="0 0 0 1">
                    <Border BorderBrush="{DynamicResource NeutralMuted}" BorderThickness="1" CornerRadius="8">
                        <ScrollViewer>
                            <ItemsControl ItemsSource="{Binding MainViewModel.SelectedReports}" Padding="8">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <c:ReportItem Report="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Border>
                <Border Grid.Row="2" Padding="16 8" BorderBrush="{DynamicResource NeutralMuted}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button
                            Classes="Custom"
                            Command="{Binding ReAuthCommand}"
                            Background="{DynamicResource PrimaryLight}"
                            BorderBrush="{DynamicResource Primary}"
                            BorderThickness="1"
                            VerticalAlignment="Stretch"
                            VerticalContentAlignment="Center"
                            CornerRadius="12 0 0 12"
                            Foreground="{DynamicResource Primary}"
                            Content="Re-Auth"
                            Padding="16 0"
                            ></Button>
                        <c:IconButton 
                            Background="{DynamicResource PrimaryLight}"
                            BorderBrush="{DynamicResource Primary}"
                            Path="/Assets/Images/arrows-rotate.svg"
                            Classes="IconOnly" 
                            Command="{Binding RefreshCommand}"
                            Margin="-1 0 0 0"/>
                        <c:IconButton 
                            Background="{DynamicResource PrimaryLight}"
                            BorderBrush="{DynamicResource Primary}"
                            CornerRadius="0 12  12 0"
                            Path="/Assets/Images/magnifying-glass.svg" 
                            Classes="IconOnly" 
                            Command="{Binding ScanCommand}"
                            Margin="-1 0 0 0"
                            />
                        <c:IconButton Text="Close" Margin="8 0 0 0" Command="{Binding CloseCommand}"></c:IconButton>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
