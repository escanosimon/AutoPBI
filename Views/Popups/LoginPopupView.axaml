<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="clr-namespace:AutoPBI.Controls"
             xmlns:vm="clr-namespace:AutoPBI.ViewModels.Popups"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"
             x:Class="AutoPBI.Views.Popups.LoginPopupView"
             x:DataType="vm:LoginPopupViewModel">
    <Design.DataContext><vm:LoginPopupViewModel></vm:LoginPopupViewModel></Design.DataContext>
    <Grid>
        <Button Classes="PopupBackground"  Command="{Binding CloseCommand}" IsVisible="{Binding IsVisible}"/>
        
        <Border Background="{DynamicResource Background}" CornerRadius="12" BorderThickness="1" BorderBrush="{DynamicResource NeutralMuted}"
                IsVisible="{Binding IsVisible}"
                VerticalAlignment="Center" 
                HorizontalAlignment="Stretch"
                MaxWidth="300"
                >
            <Grid RowDefinitions="Auto, *, 56">
                <Border Padding="16 8" BorderBrush="{DynamicResource NeutralMuted}" BorderThickness="0 0 0 1">
                    <TextBlock Foreground="{DynamicResource Foreground}" FontSize="16" FontFamily="{DynamicResource InterMedium}">Login to Power BI</TextBlock>
                </Border>
                <Border Grid.Row="1" Padding="16" BorderBrush="{DynamicResource NeutralMuted}" BorderThickness="0 0 0 1">
                   <Grid RowDefinitions="Auto, Auto">
                       <TextBox
                           IsHitTestVisible="{Binding !IsLoggingIn}"
                           Margin="0 0 0 8"
                           Watermark="Enter email or username"
                           Text="{Binding UsernameText, Mode=TwoWay}"
                           ></TextBox>
                       <TextBox 
                           IsHitTestVisible="{Binding !IsLoggingIn}"
                           Grid.Row="1"
                           Watermark="Enter password"
                           PasswordChar="*"
                           Text="{Binding PasswordText, Mode=TwoWay}"
                           >
                       </TextBox>
                   </Grid>
                </Border>
                <Border Grid.Row="2" Padding="16 8" BorderBrush="{DynamicResource NeutralMuted}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <c:IconButton Path="/Assets/Images/arrow-right-to-bracket.svg" Text="Login" Classes="Primary" Command="{Binding LoginCommand}" />
                        <c:IconButton Text="Close" Margin="8 0 0 0" Command="{Binding CloseCommand}"></c:IconButton>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
