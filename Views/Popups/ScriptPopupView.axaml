<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="clr-namespace:AutoPBI.Controls"
             xmlns:vm="clr-namespace:AutoPBI.ViewModels.Popups"
             xmlns:avaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="450"
             x:Class="AutoPBI.Views.Popups.ScriptPopupView"
             x:DataType="vm:ScriptPopupViewModel">
    <Design.DataContext><vm:ScriptPopupViewModel></vm:ScriptPopupViewModel></Design.DataContext>
    <Grid>
        <Button Classes="PopupBackground"  Command="{Binding CloseCommand}" IsVisible="{Binding IsVisible}"/>
        <Border Background="{DynamicResource Background}" CornerRadius="12" BorderThickness="1" BorderBrush="{DynamicResource NeutralMuted}"
                IsVisible="{Binding IsVisible}"
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MaxWidth="350" MaxHeight="450">
            <Grid RowDefinitions="Auto, *, 56">
                <Border Padding="16 8" BorderBrush="{DynamicResource NeutralMuted}" BorderThickness="0 0 0 1">
                    <TextBlock Foreground="{DynamicResource Foreground}" FontSize="16" FontFamily="{DynamicResource InterMedium}">Script Reports</TextBlock>
                </Border>
                    <Border Grid.Row="1" Padding="16" BorderBrush="{DynamicResource NeutralMuted}" BorderThickness="0 0 0 1">
                        <Grid RowDefinitions="Auto, *">
                            <c:ToggleButtonGroup
                                Boolean="{Binding IsScriptShown}"
                                NotBoolean="{Binding !IsScriptShown}"
                                Command1="{Binding ShowReportsCommand}"
                                Command2="{Binding ShowScriptCommand}"
                                Text1="Selected Reports"
                                Text2="Select C# Script"
                                />
                            <Border Grid.Row="1" BorderBrush="{DynamicResource NeutralMuted}" BorderThickness="1" CornerRadius="8" Padding="12">
                                <Grid>
                                    <ScrollViewer IsVisible="{Binding !IsScriptShown}">
                                        <ItemsControl ItemsSource="{Binding MainViewModel.SelectedReports}" Padding="8">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <c:ReportItem Report="{Binding}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                    <Grid IsVisible="{Binding IsScriptShown}" RowDefinitions="Auto, *">
                                        <c:IconButton 
                                            Command="{Binding OpenScriptRepositoryCommand}"
                                            Margin="0 0 0 8"
                                            Padding="0"
                                            IconMargin="0"
                                            CornerRadius="4"
                                            Foreground="{DynamicResource WarningDark}"
                                            HoverBackground="{DynamicResource Warning}"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource WarningDark}"
                                            IconUnicode="&#xf05a;" 
                                            FontSize="11"
                                            Text="Check this repository for sample scripts." />
                                        <c:IconButton 
                                            Grid.Row="1"
                                            CornerRadius="4"
                                            Command="{Binding ImportScriptCommand}"
                                            IsVisible="{Binding ImportButtonVisibility}"
                                            Classes.Disabled="{Binding IsProcessing}" 
                                            Padding="12 0"
                                            VerticalAlignment="Stretch"
                                            BorderThickness="1"
                                            HoverBackground="{DynamicResource PrimaryLight}"
                                            HoverBorderBrush="{DynamicResource Primary}"
                                            HorizontalAlignment="Stretch"
                                            IconUnicode="&#xf1c9;" 
                                            Text="Import C# File"
                                            Foreground="{DynamicResource Primary}" />
                                        <avaloniaEdit:TextEditor
                                            Grid.Row="1"
                                            x:Name="ScriptEditor"
                                            IsVisible="{Binding EditScriptVisibility}"
                                            Document="{Binding ScriptContents, Mode=TwoWay}"
                                            Padding="8"
                                            FontFamily="Consolas,Menlo,Monaco,Courier New,monospace"
                                            FontSize="11"
                                            ShowLineNumbers="True"
                                            SyntaxHighlighting="C#"
                                            WordWrap="True"
                                            Foreground="{DynamicResource Foreground}"
                                            LineNumbersForeground="{DynamicResource PrimaryLight}"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                <Border Grid.Row="2" Padding="16 8" BorderBrush="{DynamicResource NeutralMuted}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <c:IconButton Command="{Binding ScriptCommand}"
                                      Classes.Disabled="{Binding IsProcessing}" Padding="12 0" CornerRadius="12"
                                      VerticalAlignment="Stretch" IconUnicode="&#xf7ea;" Text="Script"
                                      Background="{DynamicResource Primary}" Foreground="{DynamicResource White}" />
                        <c:IconButton HoverBackground="{DynamicResource NeutralMuted}" IconMargin="0" Padding="12 0" CornerRadius="12" VerticalAlignment="Stretch" Text="Close"
                                      Margin="8 0 0 0"
                                      Foreground="{DynamicResource Foreground}" 
                                      BorderBrush="{DynamicResource NeutralMuted}" 
                                      Command="{Binding CloseCommand}"
                                      BorderThickness="1" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
