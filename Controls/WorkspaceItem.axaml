<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="using:AutoPBI.Controls">
    <Design.PreviewWith>
        <c:WorkspaceItem />
    </Design.PreviewWith>

    <Style Selector="c|WorkspaceItem">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Button Command="{TemplateBinding Command}" CommandParameter="{TemplateBinding CommandParameter}" HorizontalAlignment="Stretch" Background="Transparent" Classes="Ghost" Padding="6" CornerRadius="6">
                    <Grid ColumnDefinitions="Auto, *, Auto">
                        <Svg Path="/Assets/Images/users.svg" Height="12" Margin="0 0 8 0" VerticalAlignment="Center"/>
                        <TextBlock Foreground="{DynamicResource Foreground}" ToolTip.Tip="{TemplateBinding Text}" Grid.Column="1" VerticalAlignment="Center" Margin="0 0 8 0" Text="{TemplateBinding Text}"/>
                        <c:StatusIcon Grid.Column="2" Status="Selectable" IsChecked="{TemplateBinding IsChecked}"></c:StatusIcon>
                    </Grid>
                </Button>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
