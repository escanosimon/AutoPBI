<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="using:AutoPBI.Controls">
    <Design.PreviewWith>
        <c:ReportItem Classes="Warning"/>
    </Design.PreviewWith>

    <Style Selector="c|ReportItem">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Button Command="{TemplateBinding Command}" CommandParameter="{TemplateBinding CommandParameter}" Name="{TemplateBinding Id}" Classes="Ghost" Padding="6 4" Background="Transparent" CornerRadius="6" HorizontalAlignment="Stretch">
                    <Grid ColumnDefinitions="Auto, Auto, *">
                        <CheckBox Grid.Column="0" VerticalAlignment="Center" Margin="0 0 8 0" IsChecked="{TemplateBinding IsChecked}" IsHitTestVisible="False"></CheckBox>
                        <Svg Grid.Column="1" Path="/Assets/Images/file-chart-column.svg" VerticalAlignment="Center" Height="12" Margin="0 0 8 0"/>
                        <TextBlock Grid.Column="2" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" Text="{TemplateBinding Text}" />
                    </Grid>
                </Button>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="c|ReportItem.Success">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Button Command="{TemplateBinding Command}" CommandParameter="{TemplateBinding CommandParameter}" Name="{TemplateBinding Id}" Classes="Ghost" Padding="6" Background="Transparent" CornerRadius="6" HorizontalAlignment="Stretch">
                    <Grid ColumnDefinitions="Auto, Auto, *">
                        <c:StatusIcon Classes="Success" Margin="0 0 12 0" />
                        <Svg Grid.Column="1" Path="/Assets/Images/file-chart-column.svg" VerticalAlignment="Center" Height="12" Margin="0 0 8 0"/>
                        <TextBlock Grid.Column="2" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" Text="{TemplateBinding Text}" />
                    </Grid>
                </Button>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="c|ReportItem.Progress">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Button Command="{TemplateBinding Command}" CommandParameter="{TemplateBinding CommandParameter}" Name="{TemplateBinding Id}" Classes="Ghost" Padding="6" Background="Transparent" CornerRadius="6" HorizontalAlignment="Stretch">
                    <Grid ColumnDefinitions="Auto, Auto, *">
                        <c:StatusIcon Classes="Progress" Margin="0 0 12 0" />
                        <Svg Grid.Column="1" Path="/Assets/Images/file-chart-column.svg" VerticalAlignment="Center" Height="12" Margin="0 0 8 0"/>
                        <TextBlock Grid.Column="2" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" Text="{TemplateBinding Text}" />
                    </Grid>
                </Button>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="c|ReportItem.Warning">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Button Command="{TemplateBinding Command}" CommandParameter="{TemplateBinding CommandParameter}" Name="{TemplateBinding Id}" Classes="Ghost" Padding="6" Background="Transparent" CornerRadius="6" HorizontalAlignment="Stretch">
                    <Grid ColumnDefinitions="Auto, Auto, *">
                        <c:StatusIcon Classes="Warning" Margin="0 0 12 0" />
                        <Svg Grid.Column="1" Path="/Assets/Images/file-chart-column.svg" VerticalAlignment="Center" Height="12" Margin="0 0 8 0"/>
                        <TextBlock Grid.Column="2" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" Text="{TemplateBinding Text}" />
                    </Grid>
                </Button>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="c|ReportItem.Error">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Button Command="{TemplateBinding Command}" CommandParameter="{TemplateBinding CommandParameter}" Name="{TemplateBinding Id}" Classes="Ghost" Padding="6 4" Background="Transparent" CornerRadius="6" HorizontalAlignment="Stretch">
                    <Grid ColumnDefinitions="Auto, Auto, *">
                        <c:StatusIcon Classes="Error" Margin="0 0 12 0" />
                        <Svg Grid.Column="1" Path="/Assets/Images/file-chart-column.svg" VerticalAlignment="Center" Height="12" Margin="0 0 8 0"/>
                        <TextBlock Grid.Column="2" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" Text="{TemplateBinding Text}" />
                    </Grid>
                </Button>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
