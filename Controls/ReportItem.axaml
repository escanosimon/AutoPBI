<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="using:AutoPBI.Controls">
    <Design.PreviewWith>
        <c:ReportItem />
    </Design.PreviewWith>

    <Style Selector="c|ReportItem">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Button Command="{TemplateBinding Command}" CommandParameter="{TemplateBinding CommandParameter}" Name="{TemplateBinding Id}" Classes="Ghost" Padding="6" Background="Transparent" CornerRadius="6" HorizontalAlignment="Stretch">
                    <Grid ColumnDefinitions="Auto, Auto, *">
                        <c:StatusIcon Margin="0 0 12 0" IsChecked="{TemplateBinding IsChecked}" Status="{TemplateBinding Status}" />
                        <Svg Grid.Column="1" Path="/Assets/Images/file-chart-column.svg" VerticalAlignment="Center" Height="12" Margin="0 0 8 0"/>
                        <TextBlock Foreground="{DynamicResource Foreground}" Grid.Column="2" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" Text="{TemplateBinding Text}" ToolTip.Tip="{TemplateBinding Text}" />
                    </Grid>
                </Button>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
