<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:AutoPBI.Controls">
    <Design.PreviewWith>
        <controls:ReportItem />
    </Design.PreviewWith>

    <Style Selector="controls|ReportItem">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Button Classes="Ghost" Padding="6 4" Background="Transparent" CornerRadius="6" HorizontalAlignment="Stretch" Name="{TemplateBinding ReportId}">
                    <Grid ColumnDefinitions="Auto, Auto, *">
                        <CheckBox Grid.Column="0" VerticalAlignment="Center" Margin="0 0 8 0"></CheckBox>
                        <Svg Grid.Column="1" Path="/Assets/Images/file-chart-column.svg" VerticalAlignment="Center" Height="12" Margin="0 0 8 0"/>
                        <TextBlock Grid.Column="2" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" Text="{TemplateBinding Text}" />
                    </Grid>
                </Button>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
